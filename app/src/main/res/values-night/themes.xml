<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="SplashScreen">
        <item name="android:background">@color/black_blue</item>
        <item name="android:statusBarColor">@color/black_blue</item>
    </style>

    <style name="Base.Theme.ToDo.SplashScreen">
        <item name="android:statusBarColor">@color/black_blue</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="main_background_color">
        <item name="android:background">@color/black_blue</item>
    </style>

    <style name="toolbar_title_style">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="calendar_background_color">
        <item name="android:background">@drawable/calendar_shape_bg_dark</item>
    </style>

    <style name="calendar_month_year_text_style">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="calendar_day_text_style">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="add_task_bottom_sheet_title_style">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="add_task_bottom_select_date_style">
        <item name="android:textColor">@color/grey_variant</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="add_task_bottom_selected_date_value_style">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>