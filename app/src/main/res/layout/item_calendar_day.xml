<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/calendar_background_color"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="12dp" >

    <TextView
        android:id="@+id/calendar_day_week_tv"
        style="@style/calendar_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Mon" />

    <TextView
        android:id="@+id/calendar_day_month_tv"
        style="@style/calendar_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/calendar_day_week_tv"
        app:layout_constraintStart_toStartOf="@id/calendar_day_week_tv"
        app:layout_constraintTop_toBottomOf="@id/calendar_day_week_tv"
        tools:text="21" />

</androidx.constraintlayout.widget.ConstraintLayout>